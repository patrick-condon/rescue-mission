<% if question.errors.any? %>
   <ul class="error">
     <% question.errors.full_messages.each do |error| %>
      <h3><%= error %></h3>
      <% end %>
   </ul>
 <% end %>


<%= form_with(model: question, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
